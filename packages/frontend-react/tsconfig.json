{
  "compilerOptions": {
    "outDir": "./dist",
    "baseUrl": ".",
    "noImplicitAny": true,
    "module": "es6",
    "target": "es5",
    "jsx": "react-jsx",
    "allowJs": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "moduleResolution": "node",
    "inlineSourceMap": true,
    "paths": {
      "@components/*": [
        "./src/components/*"
      ],
      "@services/*": [
        "./src/services/*"
      ],
      "@hooks/*": [
        "./src/hooks/*"
      ],
      "@forms/*": [
        "./src/forms/*"
      ],
      "@store/*": [
        "./src/store/*"
      ],
      "@pages/*": [
        "./src/pages/*"
      ],
      "@assets/*": [
        "./src/assetc/*"
      ],
      "@src/*": [
        "./src/*"
      ],
    }
  },
  "exclude": [
    "node_modules",
    "build"
  ]
}